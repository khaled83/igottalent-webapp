<form {{action "save" on="submit"}}>
  <div>
    <label>
      Title
      {{input type="text" value=model.title}}
    </label>
  </div>
  <div>
    <label>
      Genre
      {{input type="text" value=model.genre}}
    </label>
  </div>
  <div>
    <label>
      Url
      {{input type="text" value=model.url}}
    </label>
  </div>
  <div>
    <input type="submit" value="Save">
  </div>
</form>
